<link rel="stylesheet" href="styles/styles.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.4/css/boxicons.min.css" rel="stylesheet">

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/css/boxicons.min.css"> -->
    <link rel="stylesheet" href="styles/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script src="js/scripts.js" defer></script>
    <title>Register</title>
</head>

<body>
    <div class="wrapper">
        <nav class="nav">
            <div class="nav-logo">
                <p>Pear Up</p>
            </div>

            <div class="nav-button">
                <button class="btn" id="loginBtn">ADMIN</button>
                <button class="btn white-btn" id="registerBtn">New APP!</button>
            </div>
            <div class="nav-menu-btn">
                <i class="bx bx-menu"></i>
            </div>
        </nav>

        <!----------------------------- Form box ----------------------------------->
        <div class="form-box">

            <!------------------- login form -------------------------->
            <form method="post" action="/admin">
                <div class="login-container" id="login">
                    <div class="top">
                        <header>Admin Login</header>
                    </div>
                    <div class="input-box">
                        <input type="text" class="input-field" placeholder="Username or Email" name="login">
                        <i class="bx bx-user"></i>
                    </div>
                    <div class="input-box">
                        <input type="password" class="input-field" placeholder="Password" name="password">
                        <i class="bx bx-lock-alt"></i>
                    </div>
                    <div class="input-box">
                        <button type="submit" class="submit" id="submit">Sign In</button>
                    </div>
                    <div class="two-col">
                        <div class="one">
                            <input type="checkbox" id="login-check">
                            <label for="login-check"> Remember Me</label>
                        </div>
                        <div class="two">
                            <label><a href="#">Forgot password?</a></label>
                        </div>
                    </div>
                </div>
               
            </form>


            <!------------------- registration form -------------------------->
            <form method="POST" action="/community">
                <div class="register-container" id="register">
                    <div class="top">
                        <span>Have an account? <a href="#">Login</a></span>
                        <header>Enter Job app info Here!</header>
                    </div>
                    <div class="two-forms">
                        <div class="input-box">
                            <input type="text" class="input-field" placeholder="First Name" name="fname">
                            <i class="bx bx-user"></i>
                        </div>
                        <div class="input-box">
                            <input type="text" class="input-field" placeholder="Last Name" name="lname">
                            <i class="bx bx-user"></i>
                        </div>
                    </div>
                    <div class="input-box">
                        <input type="text" class="input-field" placeholder="Email" name="email">
                        <i class="bx bx-envelope"></i>
                    </div>
                    <div class="input-box">
                        <input type="text" class="input-field" placeholder="Company" name="company">
                        <i class="bx bx-building"></i>
                    </div>
                    <div class="input-box">
                        <select id="fruits" name="fields" class="input-field">
                            <option value="" disabled selected hidden>Choose a Job Family</option>
                            <option value="software">Software</option>
                            <option value="it-cybersecurity">IT & Cyber Security</option>
                            <option value="business">Business</option>
                            <option value="misc"> Misc.</option>
                        </select>
                        <i class="bx bx-category"></i>
                    </div>
                    <div class="input-box">
                        <input type="text" class="input-field" placeholder="link" name="link">
                        <i class="bx bx-link"></i>
                    </div>
                    <div class="input-box">
                        <label for="description">
                            <textarea name="message" class="input-field" 
                                placeholder="Some words about the position"></textarea>
                            <i class="bx bx-detail"></i>
                        </label>
                    </div>

                    <div class="input-box">
                        <button type="submit" class="submit">Submit</button>
                    </div>
                    <div class="two-col">
                    </div>
                </div>
            </form>

        </div>
    </div>

</body>

</html>